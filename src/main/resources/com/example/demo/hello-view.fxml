<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <HBox spacing="10">
    <Label fx:id="amountCheck" text="Сумма в чеке: "/>
    <TextField fx:id="totalSum" layoutY="100" layoutX="100"/>
  </HBox>

  <HBox fx:id="t15" spacing="20">
    <Button text="15%" onAction="#tips15"/>
    <Label fx:id="tips15" styleClass=".my-label"/>
  </HBox>

  <HBox spacing="20" styleClass="my-label">
    <Button text="10%" onAction="#tips10"/>
    <Label fx:id="tips10"/>
  </HBox>

  <HBox spacing="20">
    <Button text="3% " onAction="#tips3"/>
    <Label fx:id="tips3"/>
  </HBox>
</VBox>
